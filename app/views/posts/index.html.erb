<h1> posts </h1>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<%= link_to 'Create Post', new_post_path %>

<div id="form" >
    <% @post.each do |post| %>
    <p>
        <%= image_tag post.image.url, style: "width:300px; height:300px" %>
    </p>
    <p>
        <b>Caption: </b> <%= post.caption %>
    </p>
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Do you want to delete?'} %>
    <br>

    <% end %>

</div>

<div>
<%= will_paginate @post, renderer: WillPaginateInfinite::InfinitePagination %>
 </div>
